@using UFF.Monopoly.Entities
@using UFF.Monopoly.Data.Entities
@inherits ComponentBase
@if (CurrentBlock is not null && Visible)
{
    <div class="type-popup-overlay" @onclick="Close"></div>
    <div id="@_popupId" class="type-popup shadow rounded-2" style="top:@(Y)px; left:@(X)px;" @onclick:stopPropagation="true" @ref="_popupRef">
        <div class="type-popup-header d-flex justify-content-between align-items-center">
            <div class="title small">Tipo</div>
            <button type="button" class="btn-close btn-close-white" aria-label="Fechar" @onclick="Close"></button>
        </div>
        <div class="type-list">
            @foreach (var t in Enum.GetValues<BlockType>())
            {
                if (t == BlockType.Company) { continue; }
                var bg = GetTypeColor(t);
                var specialValue = GetDisplayValueFor(CurrentBlock, t);
                <div class="type-option-wrapper">
                    <button class="type-option" style="--block-bg:@bg;--block-fg:@GetTextColor(bg)"
                            @onclick="(() => OnTypeClick(t))">
                        <div class="type-option-inner">
                            <div class="name fw-semibold d-flex justify-content-between align-items-center">
                                <span>
                                    @TranslateBlockType(t)
                                    @if ((t == BlockType.Property) && CurrentBlock.BuildingType != BuildingType.None)
                                    {
                                        <span class="current-cat">– @GetCategoryName(CurrentBlock.BuildingType)</span>
                                    }
                                </span>
                                @if (specialValue is not null)
                                {
                                    <span class="special-value small">Valor: @specialValue</span>
                                }
                            </div>
                            @if (t == BlockType.Property)
                            {
                                <div class="categories">
                                    @foreach (var cat in new[] { BuildingType.House, BuildingType.Hotel, BuildingType.Company, BuildingType.Special })
                                    {
                                        <div class="cat-line" title="@GetCategoryName(cat)">
                                            <span class="cat-badge" @onclick="(() => HoverCat(cat))">@GetCategoryName(cat)</span>
                                            <div class="levels">
                                                @for (int lvl = 1; lvl <= 4; lvl++)
                                                {
                                                    var level = lvl;
                                                    <div class="lvl" title="@GetCategoryName(cat) nível @level"
                                                         @onclick="(() => QuickSelect(cat, level))">
                                                        <img src="@GetBuildingImage(cat, level)" alt="@GetCategoryName(cat) @level" />
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                        </div>
                    </button>
                    @if (IsSpecialEditable(t))
                    {
                        <div class="inline-edit" title="Editar valor">
                            <input type="number" class="form-control form-control-sm inline-number" value="@GetCurrentSpecialValue(t)" @onchange="(e => OnSpecialValueChanged(t, e))" />
                        </div>
                    }
                </div>
            }
        </div>
    </div>
}
@code {
    [Parameter] public bool Visible { get; set; } = true;
    [Parameter] public int X { get; set; }
    [Parameter] public int Y { get; set; }
    [Parameter] public int Index { get; set; }
    [Parameter] public BlockTemplateEntity? CurrentBlock { get; set; }
    [Parameter] public Action<BlockType>? OnSelectType { get; set; }
    [Parameter] public Action? OnClose { get; set; }
    [Parameter] public Func<BlockType, string> TranslateBlockType { get; set; } = default!;
    [Parameter] public Func<BuildingType, string> GetCategoryName { get; set; } = default!;
    [Parameter] public Func<BuildingType, int, string> GetBuildingImage { get; set; } = default!;
    [Parameter] public Func<BuildingType, int, string> GetBuildingName { get; set; } = default!;
    [Parameter] public Func<BlockType, string> GetTypeColor { get; set; } = default!;
    [Parameter] public Action<BuildingType, int>? OnQuickPropertySelect { get; set; }
    [Parameter] public Func<BuildingType, int[]>? GetDefaultPricesForCategory { get; set; }
    [Parameter] public Func<BuildingType, int, int>? GetCachedPrice { get; set; }
    [Parameter] public Action<BuildingType, int, int>? SetCachedPrice { get; set; }

    [Inject] private IJSRuntime JS { get; set; } = default!;

    private ElementReference _popupRef; private string _popupId => $"type-popup-{Index}"; private bool _didReposition;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (Visible && !_didReposition)
        {
            try
            {
                await JS.InvokeVoidAsync("boardBuilder.repositionPopup", _popupId);
                _didReposition = true;
            }
            catch { }
        }
        // Reset reposition flag if coordinates changed significantly (e.g., user re-opened elsewhere)
        if (!_didReposition && Visible) _didReposition = false;
    }

    protected override void OnParametersSet()
    {
        // allow reposition each time popup opens at new index/coordinates
        if (Visible)
            _didReposition = false;
    }

    private void OnTypeClick(BlockType t) { if (t == BlockType.Property) return; OnSelectType?.Invoke(t); }
    private void QuickSelect(BuildingType cat, int lvl) { OnQuickPropertySelect?.Invoke(cat, lvl); Close(); }
    private void HoverCat(BuildingType cat) { }

    private void Close() => OnClose?.Invoke();
    private string GetTextColor(string? bg) { if (string.IsNullOrWhiteSpace(bg)) return "#111827"; try { if (bg.StartsWith("#") && bg.Length == 7) { var r = Convert.ToInt32(bg.Substring(1, 2), 16); var g = Convert.ToInt32(bg.Substring(3, 2), 16); var b = Convert.ToInt32(bg.Substring(5, 2), 16); var yiq = ((r * 299) + (g * 587) + (b * 114)) / 1000; return yiq >= 128 ? "#111827" : "#ffffff"; } } catch { } return "#111827"; }

    private bool IsSpecialEditable(BlockType t) => t is BlockType.Tax or BlockType.Chance or BlockType.Reves or BlockType.GoToJail;
    private int GetCurrentSpecialValue(BlockType t) { if (CurrentBlock == null) return GetDefaultForSpecial(t); if (CurrentBlock.Type == t && CurrentBlock.Rent > 0) return CurrentBlock.Rent; return GetDefaultForSpecial(t); }
    private int GetDefaultForSpecial(BlockType t) => t switch { BlockType.Tax => 150, BlockType.Chance => 2, BlockType.Reves => 2, BlockType.GoToJail => 3, _ => 0 };
    private void OnSpecialValueChanged(BlockType t, ChangeEventArgs e) { if (!int.TryParse(e?.Value?.ToString(), out var v)) return; v = Math.Max(0, v); if (CurrentBlock != null && CurrentBlock.Type == t) { CurrentBlock.Rent = v; StateHasChanged(); } }
    private string? GetDisplayValueFor(BlockTemplateEntity? block, BlockType t) { if (!IsSpecialEditable(t)) return null; int val = GetCurrentSpecialValue(t); string suffix = t switch { BlockType.Reves => " casas", BlockType.Chance => " +/-", BlockType.GoToJail => " turnos", BlockType.Tax => " $", _ => string.Empty }; return val + suffix; }
}
