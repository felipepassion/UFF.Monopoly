@using Microsoft.AspNetCore.Components.Server.ProtectedBrowserStorage
@using Microsoft.AspNetCore.Components.Forms
@using System.ComponentModel.DataAnnotations
@using System.Net.Http.Json
@using UFF.Monopoly.Data.Entities
@using UFF.Monopoly.Entities

<div class="game-header">
    <div class="left">
        <div class="brand">
            <span class="logo">??</span>
            <span class="title">@HeaderTitle</span>
        </div>
        <div class="controls">
            <label class="form-label me-2 text-light">Tabuleiro</label>
            <select class="form-select form-select-sm board-select" value="@SelectedBoardId" @onchange="OnBoardSelectChanged">
                @if (Boards is not null)
                {
                    @foreach (var b in Boards)
                    {
                        <option value="@b.Id">@b.Name (@b.Rows x @b.Cols)</option>
                    }
                }
            </select>
            <div class="btn-group ms-2">
                <button class="btn btn-sm btn-secondary" @onclick="Roll" disabled="@(!IsGameRunning)">Rolar</button>
                <button class="btn btn-sm btn-primary" @onclick="Start" disabled="@IsGameRunning">Iniciar</button>
                <button class="btn btn-sm btn-outline-light" @onclick="End" disabled="@(!IsGameRunning)">Encerrar</button>
            </div>
        </div>
    </div>
    <div class="right">
        <div class="player" title="Alterar nome">
            <div class="avatar" style="background:@PawnColorHex">@GetInitials(PlayerName)</div>
            <button class="btn btn-link btn-sm text-light name-btn" @onclick="BeginEdit">@PlayerName</button>
        </div>
    </div>
</div>

@if (_showNameModal)
{
    <div class="modal-backdrop show"></div>
    <div class="modal d-block" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content" style="background:#0f1b24;color:#e6f0ff;border:1px solid #223444;">
                <div class="modal-header">
                    <h5 class="modal-title">Sua identidade</h5>
                </div>
                <EditForm Model="_nameForm" OnValidSubmit="ConfirmNameFromForm">
                    <DataAnnotationsValidator />
                    <div class="modal-body">
                        <div class="mb-2">
                            <label class="form-label">Nome</label>
                            <InputText class="form-control" @bind-Value="_nameForm.Name" />
                            <ValidationMessage For="@(() => _nameForm.Name)" />
                        </div>
                        <div class="mb-2">
                            <label class="form-label">Peão</label>
                            <div class="d-flex flex-wrap gap-2">
                                @foreach (var p in PawnOptions)
                                {
                                    var isSel = string.Equals(_pawnUrl, p.Url, StringComparison.OrdinalIgnoreCase);
                                    <button type="button" class="btn @(isSel ? "btn-primary" : "btn-outline-secondary") p-0" title="@p.Label" @onclick="(() => SelectPawn(p))">
                                        <img src="@p.Url" alt="@p.Label" style="width:44px;height:44px;object-fit:contain;" />
                                    </button>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Salvar</button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public List<BoardDefinitionEntity> Boards { get; set; } = new();
    [Parameter] public Guid SelectedBoardId { get; set; }
    [Parameter] public bool IsGameRunning { get; set; }
    [Parameter] public string PlayerName { get; set; } = "Player 1";

    [Parameter] public EventCallback<Guid> OnBoardChanged { get; set; }
    [Parameter] public EventCallback OnStart { get; set; }
    [Parameter] public EventCallback OnEnd { get; set; }
    [Parameter] public EventCallback OnRoll { get; set; }
    [Parameter] public EventCallback<string> OnPlayerNameChanged { get; set; }
    [Parameter] public EventCallback<string> OnPawnChanged { get; set; }

    [Inject] protected ProtectedLocalStorage Storage { get; set; } = default!;
    [Inject] protected HttpClient Http { get; set; } = default!;
    [Inject] UFF.Monopoly.Infrastructure.IUserProfileService Profiles { get; set; } = default!;

    private bool _sessionLoaded;
    private bool _showNameModal;

    private string _clientId = string.Empty;

    private string _pawnUrl = DefaultPawn;
    private const string DefaultPawn = "/images/pawns/PawnsB1.png";
    private string PawnColorHex => "#335a8a";

    private record PawnOption(string Url, string Label);
    private readonly List<PawnOption> PawnOptions = new()
    {
        new("/images/pawns/PawnsB1.png","Verde"),
        new("/images/pawns/PawnsB2.png","Azul"),
        new("/images/pawns/PawnsB3.png","Amarelo"),
        new("/images/pawns/PawnsB4.png","Laranja"),
        new("/images/pawns/PawnsB5.png","Roxo"),
        new("/images/pawns/PawnsB6.png","Vermelho"),
    };

    private string HeaderTitle => IsGameRunning
        ? (Boards.FirstOrDefault(b => b.Id == SelectedBoardId)?.Name ?? "Partida")
        : "Pronto para jogar";

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender || _sessionLoaded) return;
        _sessionLoaded = true;
        try
        {
            var cid = await Storage.GetAsync<string>("clientId");
            if (!cid.Success || string.IsNullOrWhiteSpace(cid.Value))
            {
                _clientId = Guid.NewGuid().ToString("N");
                await Storage.SetAsync("clientId", _clientId);
            }
            else
            {
                _clientId = cid.Value!;
            }

            var name = await Storage.GetAsync<string>("playerName");
            if (name.Success && !string.IsNullOrWhiteSpace(name.Value) && name.Value != PlayerName)
            {
                PlayerName = name.Value!;
                await OnPlayerNameChanged.InvokeAsync(PlayerName);
                await SilentAuth();
            }
            else
            {
                _showNameModal = string.IsNullOrWhiteSpace(PlayerName) || PlayerName == "Player 1";
            }

            var lastBoard = await Storage.GetAsync<string>("lastBoardId");
            if (lastBoard.Success && Guid.TryParse(lastBoard.Value, out var id) && id != Guid.Empty && id != SelectedBoardId)
            {
                await OnBoardChanged.InvokeAsync(id);
            }

            var pawn = await Storage.GetAsync<string>("pawnImageUrl");
            if (pawn.Success && !string.IsNullOrWhiteSpace(pawn.Value))
            {
                _pawnUrl = pawn.Value!;
                await OnPawnChanged.InvokeAsync(_pawnUrl);
            }
            else
            {
                // ensure we always have a pawn
                await Storage.SetAsync("pawnImageUrl", _pawnUrl);
                await Profiles.UpdateAsync(pawnImageUrl: _pawnUrl);
                await OnPawnChanged.InvokeAsync(_pawnUrl);
            }
        }
        catch { }
        StateHasChanged();
    }

    private async Task OnBoardSelectChanged(ChangeEventArgs e)
    {
        if (Guid.TryParse(Convert.ToString(e.Value), out var id))
        {
            SelectedBoardId = id;
            await Storage.SetAsync("lastBoardId", id.ToString());
            await OnBoardChanged.InvokeAsync(id);
        }
    }

    private Task Start() => OnStart.InvokeAsync();
    private Task End() => OnEnd.InvokeAsync();
    private Task Roll() => OnRoll.InvokeAsync();

    private void BeginEdit()
    {
        _nameForm.Name = PlayerName;
        _showNameModal = true;
    }

    private async Task ConfirmNameFromForm()
    {
        var trimmed = _nameForm.Name?.Trim();
        if (!string.IsNullOrWhiteSpace(trimmed))
        {
            PlayerName = trimmed!;
            await Storage.SetAsync("playerName", PlayerName);
            // persist pawn + name
            await Storage.SetAsync("pawnImageUrl", _pawnUrl);
            await Profiles.UpdateAsync(displayName: PlayerName, pawnImageUrl: _pawnUrl);
            _showNameModal = false;
            await OnPlayerNameChanged.InvokeAsync(PlayerName);
            await OnPawnChanged.InvokeAsync(_pawnUrl);
            await SilentAuth();
        }
    }

    private async Task SilentAuth()
    {
        if (string.IsNullOrWhiteSpace(_clientId))
        {
            var cid = await Storage.GetAsync<string>("clientId");
            _clientId = cid.Success && !string.IsNullOrWhiteSpace(cid.Value) ? cid.Value! : Guid.NewGuid().ToString("N");
            await Storage.SetAsync("clientId", _clientId);
        }
        var url = $"/auth/quick?name={Uri.EscapeDataString(PlayerName)}&cid={Uri.EscapeDataString(_clientId)}";
        try { await Http.GetAsync(url); } catch { }
    }

    private Task SelectPawn(PawnOption p)
    {
        _pawnUrl = p.Url;
        return Task.CompletedTask;
    }

    private static string GetInitials(string? name)
    {
        if (string.IsNullOrWhiteSpace(name)) return "P";
        var parts = name.Trim().Split(' ', StringSplitOptions.RemoveEmptyEntries | StringSplitOptions.TrimEntries);
        if (parts.Length == 1) return parts[0].Substring(0, Math.Min(1, parts[0].Length)).ToUpperInvariant();
        return (parts[0][0].ToString() + parts[^1][0].ToString()).ToUpperInvariant();
    }

    private readonly NameForm _nameForm = new();
    private class NameForm
    {
        [Required]
        [StringLength(32, MinimumLength = 2)]
        public string Name { get; set; } = string.Empty;
    }
}
